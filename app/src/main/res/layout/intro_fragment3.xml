<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginpage_step_background">

        <ImageView
            android:id="@+id/setp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/loginpage_step_3" />

        <ImageView
            android:id="@+id/setp_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/step_3_typo" />

        <ImageButton
            android:id="@+id/start"
            android:layout_width="121dp"
            android:layout_height="32dp"
            android:layout_below="@id/setp_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/loginpage_step_3_loginbutton" />
    </RelativeLayout>
</LinearLayout>