<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="204.3dp"
    android:layout_marginBottom="23dp"
    android:layout_marginLeft="16.5dp"
    android:layout_marginRight="16.5dp"
    android:layout_marginTop="20dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="21.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17.8dp"
        android:layout_marginRight="17.5dp"
        android:layout_marginTop="12.5dp"
        android:src="@drawable/vegan_membership_title" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="5.5dp"
        android:layout_marginTop="19dp"
        android:text="매주 제공되는 요리" />

    <TextView
        android:id="@+id/menu_name_membership_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="16dp"
        android:text="1인분 가격" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9,900"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignEnd="@+id/menu_name_membership_input" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="16dp"
        android:text="멤버십 가격" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/textView12"
        android:textSize="22dp"
        android:textColor="@color/colormain"
        android:text="19,800" />

</RelativeLayout>