<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <LinearLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/titlebar_layout"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="56.2dp">

            <!--android:contentDescription="@string/img_content_description"-->
            <!--android:src="@drawable/back" />-->
            />
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="레시피"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="#166B36" />

            <ImageView
                android:id="@+id/title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

            <ImageButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:src="@drawable/search"
                />
            <ImageButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:visibility="gone"
                android:src="@drawable/mypage_accountsettingsicon"
                />
            <CheckBox
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:clickable="true"
                android:button="@drawable/filter_button"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/hamburger"
                android:layout_marginStart="20dp"
                android:background="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <!--android:contentDescription="@string/img_content_description" />-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titlebar_layout2"
            android:layout_width="match_parent"
            android:layout_height="56.2dp"
            android:background="#ffffff"
            android:visibility="gone">

            <!--android:contentDescription="@string/img_content_description"-->
            <!--android:src="@drawable/back" />-->
            />



            <ImageButton
                android:id="@+id/recipe_tool_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:src="@drawable/recipecontents_hearticon"
                />
            <TextView
                android:id="@+id/toolbar_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:visibility="gone"
                android:text="작성하기"
                />

            <TextView
                android:id="@+id/center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colormain"
                android:visibility="invisible"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:text="후기작성"
                />
            <TextView
                android:id="@+id/toolbar_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:background="#ffffff"
                android:text="확인"
                />

            <ImageButton
                android:id="@+id/bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#ffffff"
                android:src="@drawable/recipecontents_shareiicon"/>

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/undo_icon"
                android:layout_marginStart="20dp"
                android:background="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/count_ll">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/fronttxt"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:textColor="@color/colormain"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/backtxt"
                    android:visibility="gone"
                    android:text="/10"/>
            </LinearLayout>


            <!--android:contentDescription="@string/img_content_description" />-->

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/bottom_shadow"/>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_below="@+id/top_layout" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/drawer_menu"
        android:layout_width="199dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/drawer_list"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|bottom"
            android:choiceMode="singleChoice"
            android:listSelector="#00000000"
            android:scrollbars="none" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
