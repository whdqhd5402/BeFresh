<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_slmagazine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/like_slmagazine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="7.5dp"
                android:layout_marginEnd="10.3dp"
                android:button="@drawable/heart_check_save_list" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="7.5dp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_slmagazine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="비건의 유래" />

            <TextView
                android:id="@+id/content_slmagazine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="비건은 어쩌고 저쩌고 어째서 저쨰서" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
