<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12.8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:padding="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1">

            <ImageView
                android:id="@+id/img_item_my_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                />

            <CheckBox
                android:id="@+id/like_my_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_item_my_recipe"
                android:layout_alignRight="@+id/img_item_my_recipe"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="6dp"
                android:button="@drawable/heart_check_myrecipe" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rl1">

            <TextView
                android:id="@+id/title_item_my_recipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#5c5c5c"
                android:textStyle="bold"
                android:background="#ffffff"
                android:textSize="13dp"
                android:text="두유버섯 파스"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
